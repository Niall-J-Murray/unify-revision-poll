{
  "family": "unify-revision-poll",
  "networkMode": "awsvpc",
  "executionRoleArn": "",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "unify-revision-poll",
      "image": ":latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/unify-revision-poll",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": ":DATABASE_URL::"
        },
        {
          "name": "DIRECT_URL",
          "valueFrom": ":DIRECT_URL::"
        },
        {
          "name": "NEXT_PUBLIC_APP_URL",
          "valueFrom": ":NEXT_PUBLIC_APP_URL::"
        },
        {
          "name": "NEXTAUTH_URL",
          "valueFrom": ":NEXTAUTH_URL::"
        },
        {
          "name": "NEXTAUTH_SECRET",
          "valueFrom": ":NEXTAUTH_SECRET::"
        },
        {
          "name": "EMAIL_SERVER_HOST",
          "valueFrom": ":EMAIL_SERVER_HOST::"
        },
        {
          "name": "EMAIL_SERVER_PORT",
          "valueFrom": ":EMAIL_SERVER_PORT::"
        },
        {
          "name": "EMAIL_SERVER_USER",
          "valueFrom": ":EMAIL_SERVER_USER::"
        },
        {
          "name": "EMAIL_SERVER_PASSWORD",
          "valueFrom": ":EMAIL_SERVER_PASSWORD::"
        },
        {
          "name": "EMAIL_FROM",
          "valueFrom": ":EMAIL_FROM::"
        },
        {
          "name": "GOOGLE_CLIENT_ID",
          "valueFrom": ":GOOGLE_CLIENT_ID::"
        },
        {
          "name": "GOOGLE_CLIENT_SECRET",
          "valueFrom": ":GOOGLE_CLIENT_SECRET::"
        },
        {
          "name": "GITHUB_ID",
          "valueFrom": ":GITHUB_ID::"
        },
        {
          "name": "GITHUB_SECRET",
          "valueFrom": ":GITHUB_SECRET::"
        },
        {
          "name": "NODE_ENV",
          "valueFrom": ":NODE_ENV::"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget -q -O - http://localhost:3000/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
